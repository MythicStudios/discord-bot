{
  "_comment": "Discord Bot Egg - Simple Node.js Bot",
  "meta": {
    "version": "PTDL_v2",
    "update_url": null
  },
  "name": "Discord Bot",
  "author": "admin@mythic-studios.net",
  "description": "A simple Discord.js bot egg with Node.js version selection",
  "features": null,
  "docker_images": {
    "node12": "ghcr.io/pterodactyl/yolks:nodejs_12",
    "node14": "ghcr.io/pterodactyl/yolks:nodejs_14",
    "node15": "ghcr.io/pterodactyl/yolks:nodejs_15",
    "node16": "ghcr.io/pterodactyl/yolks:nodejs_16",
    "node17": "ghcr.io/pterodactyl/yolks:nodejs_17",
    "node18": "ghcr.io/pterodactyl/yolks:nodejs_18",
    "node20": "ghcr.io/pterodactyl/yolks:nodejs_20"
  },
  "file_denylist": [],
  "startup": "/usr/local/bin/npm install --production && /usr/local/bin/node /home/container/${BOT_JS_FILE}",
  "config": {
    "files": "{}",
    "startup": "{\n    \"done\": \"Bot is online\"\n}",
    "logs": "{}",
    "stop": "^C"
  },
  "scripts": {
    "installation": {
      "script": "#!/bin/bash\napt-get update\napt-get install -y git\ncd /home/container\necho 'Installation complete'",
      "container": "ubuntu:20.04",
      "entrypoint": "bash"
    }
  },
  "variables": [
    {
      "name": "Bot JS File",
      "description": "The main JavaScript file to start the bot",
      "env_variable": "BOT_JS_FILE",
      "default_value": "app.js",
      "user_viewable": true,
      "user_editable": true,
      "rules": "required|string|max:64",
      "field_type": "text"
    }
  ]
}
